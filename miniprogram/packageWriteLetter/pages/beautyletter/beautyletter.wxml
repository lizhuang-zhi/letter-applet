<!-- 主结构 -->
<view class="main-body">
  <!-- 顶部栏 -->
  <view class="top-body">
    <!-- 时间 -->
    <view class="time">
      <view class="week-day">{{articleObj.days}}</view>
      <view class="date-time">{{articleObj.articleTime}}</view>
    </view>
    <!-- 学习图 -->
    <view class="learn-pic">
      <image src="../../images/reading-1.png"></image>
    </view>
  </view>

  <!-- 图片 -->
  <view class="pic">
    <image src="{{articleObj.img_url}}"></image>
  </view>

  <!-- 文章标题 -->
  <view class="title">
    {{articleObj.articleTitle}}
  </view>

  <!-- 文章内容 -->
  <view class="content-article">{{articleObj.articleContent}}</view>

  <!-- 底部栏 -->
  <view class="bottom-bar-out">
    <view class="bottom-bar" wx:for="{{tagArr}}" wx:key='index'>
      <!-- 来源 -->
      <view class="bottom-item">{{item}}</view>
    </view>
  </view>

</view>


<!-- loading组件 -->
<yeo-loading isShowLoading='{{isShowLoading}}' dotColor='#FD8F00'></yeo-loading>