page {
  /* 页面左边距 */
  --margin-top: 40rpx;
}

/* 顶部文字 */
.top-content-box {
  margin: 60rpx 0 0 var(--margin-top);
  font-family: 'Courier New', Courier, monospace;
}
.top-content-box .top-tit {
  font-size: 40rpx;
  font-weight: bold;
  color: #293939;
}
.top-content-box .top-content {
  font-size: 25rpx;
  color: #A0A0A0;
  margin-top: 15rpx;
  margin-right: 70rpx;
}

/* 美文欣赏栏 */
.beauty-article {
  margin: 40rpx 40rpx 20rpx;
}
.beauty-article .info-left {
  font-size: 40rpx;
  font-family: 'Courier New', Courier, monospace;
  font-weight: bold;
  width: 500rpx;
}
.beauty-article .info-right {
  font-size: 26rpx;
  letter-spacing: 2rpx;
}


/* 解忧信件标题 */
.tit-sorrow {
  margin-left: var(--margin-top);
  font-size: 40rpx;
  font-weight: bold;
  color: #293939;
  font-family: 'Courier New', Courier, monospace;
}

/* 解忧信件 */
.tit-sorrow-box {
  margin: 20rpx 40rpx 260rpx;
}
.tit-sorrow-box .sorrow-list {
  height: 500rpx;
}
.tit-sorrow-box .sorrow-list yeo-stamp-text {
  display: inline-block;
  margin-right: 20rpx;
}
.tit-sorrow-box .sorrow-list .list-box {
  display: flex;
}

