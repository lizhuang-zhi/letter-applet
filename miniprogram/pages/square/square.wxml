<van-tabs active="0" swipeable animated color="#EC625C" line-height='10px' offset-top='0' title-active-color='#444444'
  sticky='true' title-inactive-color='#888888' custom-class='custom-class' tab-active-class='tab-active-class'
  tab-class='tab-class' bind:change='changeTap'>

  <van-tab title="公开日记" name='0'>
    <view class="diary">
      <!-- 公开日记 -->
      <yeo-flow-waterfall-box bindtap="ToDiaryContent">
        <yeo-diary-box-v2 wx:for="{{diaryArr}}" wx:key='index' content='{{item.content}}'
          weatherPicUrl='{{item.weather}}' boxWidth='320rpx'></yeo-diary-box-v2>
      </yeo-flow-waterfall-box>
    </view>

  </van-tab>

  <van-tab title="吐槽大会" name='1'>
    <!-- 吐槽大会 -->
    <view class="complain">

      <yeo-text-box wx:for="{{complianArr}}" wx:key='index' userName='{{item.penName}}' commentNum='{{item.number}}' headPicUrl='{{item.avatarUrl}}' bindtap="ToComplainTap" content='我是一个人在游走的时候'></yeo-text-box>
      
    </view>
  </van-tab>

</van-tabs>



<!-- 回到顶部按钮 -->
<view class="bot-fix-group" wx:if="{{fixedInputPhone}}">
  <view class="back-top" bindtap="backToTop">
    <image src="https://z3.ax1x.com/2021/03/30/cPB42Q.png"></image>
  </view>
</view>