page {
  /* 页面背景色 */
  background: #FFFFFF;
  /* 页面左边距 */
  --margin-top: 40rpx;

}
/* 顶部文字 */
.top-content-box {
  margin: 60rpx 0 0 var(--margin-top);
  font-family: 'Courier New', Courier, monospace;
}
.top-content-box .top-tit {
  font-size: 40rpx;
  font-weight: bold;
  color: #293939;
}

/* 消息通知 */
.message-info-box {
  margin: 50rpx 40rpx 0;
}