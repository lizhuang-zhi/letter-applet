<!-- 消息通知 -->
<van-notify id="van-notify" />

<!-- 顶部文字 -->
<view class="top-content-box">
  <view class="top-tit">收件箱</view>
</view>

<!-- loading组件 -->
<yeo-loading-part pull="{{pull}}" push="{{push}}" bindrefresh="refresh" bindtoload="toload" top='100'>
  <!-- 功能模块 -->
  <view class="my-info-bar">
    <keo-fun-blocks dataList='{{dataList}}' BlockFontColor='#343434' bind:clickevent='ToReplyListTap' BlockRadius='35'>
    </keo-fun-blocks>
  </view>


  <!-- 消息通知 -->
  <view class="message-info-box">
    <!-- 历史信件 -->
    <yeo-message-notification infoTit='历史信件' leftPic='https://z3.ax1x.com/2021/04/21/cbH5S1.png' notifiNum='0'
      boxBgColor='#eaeaff' infoDesc='回顾信件，找回真我，进来看看吧~' bindtap="ToHistoryLetter" infoTime=''>
    </yeo-message-notification>
    <!-- 最新活动 -->
    <yeo-message-notification boxBgColor='#FBEBEA' leftPic='https://z3.ax1x.com/2021/03/25/6O0PZn.png' infoTit='最新活动'
      infoDesc='公开日记、吐槽大会等你加入！' notifiNum='{{messageList[0]}}' bindtap="ToLatestevents" infoTime='04-05'>
    </yeo-message-notification>
    <!-- 官方消息 -->
    <yeo-message-notification leftPic='https://z3.ax1x.com/2021/03/25/6O0FI0.png'
      notifiNum='{{officialNewsNum + messageList[1]}}' infoDesc='文明用语、理性回信，期待与你共同成长' bindtap="ToOfficialnews"
      infoTime='{{officialNewsTime}}'>
    </yeo-message-notification>
    <!-- 我的邮票 -->
    <yeo-message-notification infoTit='我的邮票' notifiNum='{{messageList[2]}}'
      leftPic='https://z3.ax1x.com/2021/03/25/6O0prj.png' boxBgColor='#FCF1E9' infoDesc='快来解锁属于你的邮票吧'
      bindtap="ToMyStamp" infoTime='04-22'></yeo-message-notification>
    <!-- 我的成就 -->
    <yeo-message-notification infoTit='我的成就' notifiNum='{{messageList[3]}}'
      leftPic='https://z3.ax1x.com/2021/03/25/6OTSQH.png' infoDesc='电亮你的成就' boxBgColor='#E6F8F0'
      bindtap="ToMyAchievement" infoTime='04-15'>
    </yeo-message-notification>
    <!-- 集邮册 -->
    <yeo-message-notification infoTit='集邮册' notifiNum='{{messageList[4]}}'
      leftPic='https://yundingxikj.oss-cn-beijing.aliyuncs.com/LetterStation/stampCollection.png' infoDesc='集齐邮票，获得丰厚奖励' boxBgColor='#ffeaf6'
      bindtap="ToStampCollection" infoTime='04-27'>
    </yeo-message-notification>
  </view>
</yeo-loading-part>