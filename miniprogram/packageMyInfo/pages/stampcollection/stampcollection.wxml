<view class="collection">

  <view class="collection-box">
    <view class="show-stamp" wx:for="{{stampArr}}" wx:key='index' bindtap="showContent" data-index="{{index}}" data-tit="{{item.tit}}" data-desc="{{item.desc}}" data-edition="{{item.edition}}" data-pic="{{item.stampPic}}">
      <!-- 显示解锁邮票 -->
      <image wx:if="{{item.isLock}}" src="{{item.stampPic}}"></image>
      <!-- 未解锁邮票 -->
      <image wx:else src="https://yundingxikj.oss-cn-beijing.aliyuncs.com/LetterStation/lock.png"></image>
    </view>
  </view>

</view>


<!-- 弹出邮票具体内容 -->
<van-popup show="{{ isShowPop }}" closeable  bind:close="onStampClose"
  close-icon="close" custom-style='border-radius: 25rpx;' catchtouchmove>
  <!-- 展示邮票 -->
  <view class="showpop-box">
    <!-- 邮票图片 -->
    <view class="stamp-pic">
      <image src="{{stampPic}}"></image>
    </view>
    <!-- 邮票信息 -->
    <view class="info">
      <view class="tit">{{stampTit}}</view>
      <view class="desc">{{stampDesc}}</view>
      <view class="bot-part">
        <view class="edition">{{stampEdition}}</view>
        <view class="share">
          <image bindtap="shareStamp" src="https://yundingxikj.oss-cn-beijing.aliyuncs.com/LetterStation/share.png"></image>
          <!-- 分享按钮 -->
          <button class="share-btn" open-type='share'></button>
        </view>
      </view>
    </view>
  </view>
</van-popup>