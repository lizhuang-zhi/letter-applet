<view class="stamp-container">
  <!-- 邮票item -->
  <yeo-frame-view class="item-stamp" framePadding='30rpx 30rpx' frameBgColor='{{boxColor}}' frameAlignItems='center'
    frameBoxSizing='border-box' frameBordRadius='0rpx' wx:for="{{stampArr}}" bindtap="showStampPopup" data-tit="{{item.tit}}" data-desc="{{item.desc}}" data-edition="{{item.edition}}" data-pic="{{item.stampPic}}">
    <!-- 左侧配图 -->
    <view class="left-pic">
      <image src="{{item.stampPic}}"></image>
    </view>
    <!-- 右侧信息 -->
    <view class="right-info" style="width: 80%;">
      <yeo-frame-view direction='row' frameBgColor='{{boxColor}}'>
        <!-- 右侧上部分 -->
        <view class="top-part">
          <text class="tit">{{item.tit}}</text>
          <text class="stamp-number">{{item.stampNumber}}</text>
          <view class="desc">{{item.desc}}</view>
        </view>
        <!-- 右侧下部分 -->
        <view class="bot-part">
          <yeo-frame-view frameBgColor='{{boxColor}}' frameAlignItems='center'>
            <!-- 解锁时间 -->
            <yeo-frame-view frameBgColor='{{boxColor}}' frameAlignItems='center'>
              <view class="lock-pic">
                <image src="../../images/solve_lock.png"></image>
              </view>
              <view class="cont">{{item.lockTime}}</view>
            </yeo-frame-view>
            <!-- 邮票版本号 -->
            <view class="edition">{{item.edition}}</view>
          </yeo-frame-view>
        </view>
      </yeo-frame-view>
    </view>
  </yeo-frame-view>
</view>


<!-- 弹出层 -->
<van-popup show="{{ isShowPop }}" closeable  bind:close="onStampClose"
  close-icon="close" custom-style='border-radius: 25rpx;' catchtouchmove>
  <!-- 展示邮票 -->
  <view class="showpop-box">
    <!-- 邮票图片 -->
    <view class="stamp-pic">
      <image src="{{stampPic}}"></image>
    </view>
    <!-- 邮票信息 -->
    <view class="info">
      <view class="tit">{{stampTit}}</view>
      <view class="desc">{{stampDesc}}</view>
      <view class="edition">{{stampEdition}}</view>
    </view>
  </view>
</van-popup>