<view class="stamp-container">

  <block wx:for="{{achievementsArr}}" wx:key='index'>
    <!-- 邮票item -->
    <yeo-frame-view class="item-stamp" framePadding='30rpx 30rpx' frameBgColor='{{item.lock == true ? "var(--LockBgColor)" : "var(--solveLockBgColor)"}}' frameAlignItems='center'
      frameBoxSizing='border-box' frameBordRadius='0rpx'>

      <!-- 未解锁成就 -->
      <block wx:if="{{item.lock}}">
        <!-- 未解锁图片 -->
        <view class="left-pic">
          <image src="https://yundingxikj.oss-cn-beijing.aliyuncs.com/LetterStation/lock.png"></image>
        </view>
        <!-- 右侧信息 -->
        <view class="right-info" style="width: 80%;">
          <yeo-frame-view direction='col' frameBgColor='{{item.lock == true ? "var(--LockBgColor)" : "var(--solveLockBgColor)"}}' frameAlignItems='center'>
            <!-- 右侧部分 -->
            <view class="top-part">
              <text class="tit">{{item.achieveName}}</text>
              <view class="desc">{{item.achieveDesc}}</view>
            </view>
          </yeo-frame-view>
        </view>
      </block>

      <!-- 已解锁成就 -->
      <block wx:else>
        <!-- 左侧配图 -->
        <view class="left-pic">
          <image src="{{item.achieveUrl}}"></image>
        </view>
        <!-- 右侧信息 -->
        <view class="right-info" style="width: 80%;">
          <yeo-frame-view direction='row' frameBgColor='{{item.lock == true ? "var(--LockBgColor)" : "var(--solveLockBgColor)"}}'>
            <!-- 右侧上部分 -->
            <view class="top-part">
              <text class="tit">{{item.achieveName}}</text>
              <view class="desc">{{item.achieveDesc}}</view>
            </view>
            <!-- 右侧下部分 -->
            <view class="bot-part">
              <yeo-frame-view frameBgColor='{{item.lock == true ? "var(--LockBgColor)" : "var(--solveLockBgColor)"}}' frameAlignItems='center'>
                <!-- 解锁时间 -->
                <yeo-frame-view frameBgColor='{{item.lock == true ? "var(--LockBgColor)" : "var(--solveLockBgColor)"}}' frameAlignItems='center'>
                  <view class="lock-pic">
                    <image src="https://yundingxikj.oss-cn-beijing.aliyuncs.com/LetterStation/solve_lock.png"></image>
                  </view>
                  <view class="cont">{{item.obtainTime}}</view>
                </yeo-frame-view>
                <!-- 邮票版本号 -->
                <view class="edition">{{item.achieveEdition}}</view>
              </yeo-frame-view>
            </view>
          </yeo-frame-view>
        </view>
      </block>

    </yeo-frame-view>
  </block>

</view>