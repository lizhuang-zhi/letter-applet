<!-- 按钮盒子 -->
<view class="btn-box" style="width:{{BtnWidth}};height:{{BtnHeight}};margin:{{BtnMargin}};justify-content:{{BtnStyle}}" 
  data-BtnText="{{BtnText}}" data-BtnColor="{{BtnColor}}" data-BtnBackColor="{{BtnBackColor}}">
  <!-- 按钮 -->
  <view class="btn" bindtap="clickBtn"
    style="width:{{BtnWidth}};height:{{BtnHeight}};border-radius:{{BtnRadius}};line-height:{{LineHeight}};background-color:{{BtnBackColor}};color:{{BtnColor}};font-size:{{BtnFontSize + 'rpx'}};letter-spacing: {{BtnFontLetterSpacing + 'rpx'}};border: {{btnBorder}}">
    {{BtnText}}</view>
</view>