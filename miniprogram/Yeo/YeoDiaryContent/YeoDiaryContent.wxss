.yeo-diary-content {

  border-radius: 15rpx;
}
.yeo-diary-content .main-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #F7F8F9;
  padding: 40rpx 40rpx 30rpx;
  border-top-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
}
.yeo-diary-content .main-top .top-left .date{
  font-size: 62rpx;
  font-weight: bold;
  color: #414447;
  font-family: 'Courier New', Courier, monospace;
}
.yeo-diary-content .main-top .top-left .week-day {
  font-size: 27rpx;
  color: #BCBFBC;
}
.yeo-diary-content .main-top .top-right {
  width: 65rpx;
  height: 60rpx;
}
.yeo-diary-content .main-top .top-right image{
  width: 100%;
  height: 100%;
}



/* 中部分 */
.yeo-diary-content .main-middle {
  font-size: 30rpx;
  color: #444647;
  padding: 30rpx 40rpx 30rpx;
  background: #F2F5F5;
  line-height: 2;
  letter-spacing: 1rpx;
  font-family: 'Courier New', Courier, monospace;
  overflow: hidden;
  /* 添加数字换行 */
  word-break: break-all;
}

.yeo-diary-content .main-bottom {
  font-size: 30rpx;
  color: #77879D;
  text-align: right;
  background: #F1F4F4;
  padding: 40rpx 40rpx 30rpx;
  letter-spacing: 3rpx;
  border-bottom-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}