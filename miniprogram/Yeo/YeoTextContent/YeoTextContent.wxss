.yeo-text-content {
  background: #FFFFFF;
  border-top-right-radius: 20rpx;
}
.yeo-text-content .main-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 45rpx 0 30rpx;
}
/* 上部分 */
.yeo-text-content .main-top .top-left {
  display: flex;
  align-items: center;
}
/* 头像与昵称 */
.yeo-text-content .main-top .top-left .pic {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}
.yeo-text-content .main-top .top-left .pic image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.yeo-text-content .main-top .top-left .name {
  font-size: 27rpx;
  color: #9798AC;
  letter-spacing: 1rpx;
} 


/* 时间 */
.yeo-text-content .main-top .top-right {
  display: flex;
  align-items: center;
}
.yeo-text-content .main-top .top-right .cloud-pic{
  width: 50rpx;
  height: 50rpx;
}
.yeo-text-content .main-top .top-right .cloud-pic image{
  width: 100%;
  height: 100%;
}
.yeo-text-content .main-top .top-right .time {
  font-size: 27rpx;
  color: #c4c4c9;
  margin-left: 20rpx;
}


/* 下部分 */
.yeo-text-content .main-bottom .content-before {
  text-align: left;
  font-size: 50rpx;
  padding: 40rpx 0 0 40rpx;
}
.yeo-text-content .main-bottom .content-after {
  text-align: right;
  font-size: 50rpx;
  padding: 0 30rpx 40rpx 0;
} 
.yeo-text-content .main-bottom .content {
  font-size: 28rpx;
  color: #A7A8B9;
  letter-spacing: 2rpx;
  line-height: 1.7;
  padding: 0 25rpx 0 70rpx;
}