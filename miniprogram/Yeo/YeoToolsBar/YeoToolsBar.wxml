<view class="yeo-tools-bar">
  <view class="inner-tools" style="border-radius: {{bordRadius + 'rpx'}};">

    <!-- 开始点击 -->
    <view class="main size" bindtap="showTools" style="background: {{bgColor}};">
      <image src="{{mainPic}}" style="padding: {{ picSize + 'rpx'}};"></image>
    </view>

    <!-- 展示出来的工具图标 -->
    <view class="item-1 item size" animation="{{fir_animation}}" bindtap="TapUp" style="background: {{bgColor}};">
      <image src="{{upPic}}" style="padding: {{ picSize + 'rpx'}};"></image>
    </view>
    <view class="item-2 item size" animation="{{sec_animation}}" bindtap="TapUpRight" style="background: {{bgColor}};">
      <image src="{{rightUpPic}}" style="padding: {{ picSize + 'rpx'}};"></image>
    </view>
    <view class="item-3 item size" animation="{{thi_animation}}" bindtap="TapRight" style="background: {{bgColor}};">
      <image src="{{rightPic}}" style="padding: {{ picSize + 'rpx'}};"></image>
    </view>

  </view>
</view>