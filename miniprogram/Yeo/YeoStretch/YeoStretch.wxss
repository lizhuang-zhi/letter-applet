.yeo-stretch {
  width: 120rpx;
  height: 120rpx;
  background: rgb(255,255,255);
  box-shadow: 0 0 22rpx #bbbbbb;
  border-radius: 50%;

  position: relative;
}
.yeo-stretch .showpic {
  width: 72rpx;
  height: 72rpx;

  position: absolute;
  top: 20rpx;
  left: 20rpx;
}
.yeo-stretch .showpic image{
  width: 100%;
  height: 100%;
  animation: swingShow 1.2s infinite alternate;
}
.yeo-stretch .wordsContent {
  padding: 120rpx 30rpx 50rpx;
  display: none;
}

@keyframes swingShow {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}