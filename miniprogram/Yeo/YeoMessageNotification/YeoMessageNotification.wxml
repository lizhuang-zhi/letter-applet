<view class="yeo-message-notification" style="margin: {{boxMargin}};">
  <!-- 左侧图片 -->
  <view class="left-pic" style="background: {{boxBgColor}};">
    <image src="{{leftPic}}"></image>

    <!-- 消息提示 -->
    <view class="notification" wx:if="{{notifiNum != 0}}">{{notifiNum}}</view>
  </view>

  <!-- 右侧信息 -->
  <view class="right-info">

    <!-- 上部分 -->
    <view class="top-part">
      <view class="tit">{{infoTit}}</view>
      <view class="time">{{infoTime}}</view>
    </view>

    <!-- 下部分 -->
    <view class="bot-part">{{infoDesc}}</view>

  </view>
</view>