.yeo-swiper .yeo-swiper-item {
  margin-left: 80rpx;
}

/* 内部样式 */
.yeo-swiper-item-v1 {
  width: 100%;
  height: 100%;
  transform: scale(1,0.83);
  position: relative;
}
.yeo-swiper-item-v1 .star {
  display: flex;
  align-items: center;
  position: absolute;
}
.yeo-swiper-item-v1 .star image{
  margin: 0 auto;
}
.yeo-swiper-item-v1 .bottomInfo {
  position: absolute;
}

/* 动效变化类 */
.active {
  transform: scale(1.2,1.45);
  transition: all 0.2s ease-in 0s;
}
.normal {
  transform: none;
  transition: all 0.2s ease-in 0s;
}