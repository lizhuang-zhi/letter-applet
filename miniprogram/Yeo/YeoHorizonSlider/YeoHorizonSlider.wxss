.yeo-horizon-slider {
  white-space: nowrap;
  margin-left: 34rpx;
}
.yeo-horizon-slider .singleBox{
  width: 240rpx;
  display: inline-block;
  margin-right: 24rpx;
}
.yeo-horizon-slider .singleBox .pic {
  width: 100%;
  height: 280rpx;
  border-radius: 15rpx;
} 
.yeo-horizon-slider .singleBox .pic image {
  width: 100%;
  height: 100%;
  border-radius: inherit;
}
.yeo-horizon-slider .singleBox .content {
  font-size: 28rpx;
  padding: 10rpx 0 20rpx;
}
.yeo-horizon-slider .singleBox .content .tit {
  font-weight: 600;
  color: #343434;
}
.yeo-horizon-slider .singleBox .content .desc {
  font-size: 24rpx;
  letter-spacing: 2rpx;
  padding-top: 6rpx;
  color: #777777;
}