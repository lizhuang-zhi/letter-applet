page {
  /* 图标大小 */
  --pic-size: 250rpx;
  
  /* 
    计算方式：图标大小 * 2 = 下面两个数据和
  */
  /* 右边与下边图标与对立距离 */
  --double-pic-size: 470rpx;
  /* 上图标与做图标与边框距离 */
  --reverse-pic-size: 30rpx;

  /*  圆桌大小:（图标大小 * 3） */
  --table-size: 750rpx;

  /* 
    整块组件左移与上移距离：
      -（圆桌大小 / 2）
  */
  --half-pic-size: -375rpx;

}
.yeo-rotate {
  position: fixed;
  top: var(--half-pic-size);
  left: var(--half-pic-size);
  transform: rotate(45deg);
}
.yeo-rotate .box-rotate {
  width: var(--table-size);
  height: var(--table-size);
  position: relative;
  border-radius: 50%;
}
.yeo-rotate .box-rotate .item-food {
  width: var(--pic-size);
  height: var(--pic-size);
}
.yeo-rotate .box-rotate .item-food image{
  width: 100%;
  height: 100%;
}
.yeo-rotate .box-rotate .item-food:nth-child(1){
  position: absolute;
  top: var(--reverse-pic-size);
  left: var(--pic-size);
}
.yeo-rotate .box-rotate .item-food:nth-child(2){
  position: absolute;
  top: var(--pic-size);
  left: var(--double-pic-size);
}
.yeo-rotate .box-rotate .item-food:nth-child(3){
  position: absolute;
  top: var(--double-pic-size);
  left: var(--pic-size);
}
.yeo-rotate .box-rotate .item-food:nth-child(4){
  position: absolute;
  top: var(--pic-size);
  left: var(--reverse-pic-size);
}




