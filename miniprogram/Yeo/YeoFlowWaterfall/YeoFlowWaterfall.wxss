.yeo-flow-waterfall .flow-box {
  width: 100%;
  column-count: 2;
}
.yeo-flow-waterfall .flow-box .flow-water-item {
  display: inline-block;
  width: 100%;
}
.yeo-flow-waterfall .flow-box .flow-water-item .flow-pic{
  width: 100%;
}
.yeo-flow-waterfall .flow-box .flow-water-item .bot-content{
  display: flex;
  flex-direction: column;
}
.yeo-flow-waterfall .flow-box .flow-water-item .bot-content .info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.yeo-flow-waterfall .flow-box .flow-water-item .bot-content .info .user,.yeo-flow-waterfall .flow-box .flow-water-item .bot-content .info .loves{
  display: flex;
  align-items: center;
}