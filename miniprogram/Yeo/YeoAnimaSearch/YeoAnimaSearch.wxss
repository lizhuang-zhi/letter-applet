page {
  /* 搜索图片大小 */
  --search-pic: 47rpx;
  /* 取消搜索图片大小 */
  --cancel-search-pic: 38rpx;
}

.yeo-anima-search {
  display: flex;
  align-items: center;
  position: relative;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50rpx;
}
.yeo-anima-search .input-words {
  margin: 0 15rpx 0 20rpx;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  position: absolute;
  top: 30rpx;
  left: 0;

  opacity: 0;
}
.yeo-anima-search .input-words input {
  width: 0;
  height: 0;
}
.yeo-anima-search .search-pic {
  width: var(--search-pic);
  height: var(--search-pic);

  position: absolute;
  top: 30rpx;
  left: 30rpx;
}
.yeo-anima-search .search-pic image {
  width: 100%;
  height: 100%;
}
.yeo-anima-search .cancel-pic {
  width: var(--cancel-search-pic);
  height: var(--cancel-search-pic);
  position: absolute;
  top: 35rpx;
  left: 0;

  opacity: 0;
}
.yeo-anima-search .cancel-pic image {
  width: 100%;
  height: 100%;
}

/* ***********实时搜索内容*********** */
.yeo-anima-search .sear-cont {
  position: absolute;  
  top: 30rpx;
  left: 0;
  line-height: 1.6;
  margin-top: 70rpx;

  width: 0;
  height: 0;
}
.yeo-anima-search .sear-cont .line {
  border-top: 3rpx solid #D7D7D7;
  margin: 0 15rpx;
  
  opacity: 0;
}
.yeo-anima-search .sear-cont .content {
  margin: 20rpx 0 30rpx 30rpx;
}
.yeo-anima-search .sear-cont .content .tit {
  letter-spacing: 2rpx;
  color: #777777;
}
.yeo-anima-search .sear-cont .content .desc {
  letter-spacing: 1rpx;
  color: #999999;
}
