.bottom-bar,
.go-index {
  position: fixed;
  text-align: center
}

.go-index {
  width: 100rpx;
  height: 50rpx;
  background: #717879;
  border-radius: 30rpx;
  color: #f4f4f4;
  opacity: .7;
  letter-spacing: 3rpx;
  font-size: 26rpx;
  line-height: 50rpx;
  bottom: 230rpx;
  right: 35rpx
}

.bottom-bar {
  width: 100%;
  height: 200rpx;
  background: #cb3f2e;
  bottom: 0
}

.bottom-bar .title {
  font-size: 37rpx;
  color: #fefdfd;
  margin: 35rpx 0 10rpx;
  letter-spacing: 7rpx
}

.bottom-bar .tech {
  font-size: 23rpx;
  color: #e1968f;
  letter-spacing: 5rpx
}