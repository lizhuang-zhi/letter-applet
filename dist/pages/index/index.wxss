@keyframes upDown {

  0%,
  to {
    transform: translateY(0)
  }

  50% {
    transform: translateY(20rpx)
  }
}

page {
  --notifi-box-bg-color: #FFFFFF;
  background: #eee
}

.add-item {
  width: 95rpx;
  height: 95rpx;
  border-radius: 50%;
  background: #ff1d23;
  position: fixed;
  bottom: 90rpx;
  right: 70rpx;
  z-index: 99999
}

.add-item image {
  width: 50%;
  height: 50%;
  margin: 0 auto
}

.add-item,
.top-content-box .top-tit {
  display: flex;
  align-items: center
}

.beauty-article,
.tit-sorrow {
  margin: var(--index-tit-margin)
}

.beauty-article .info-left,
.tit-sorrow .info-left {
  font-size: 40rpx;
  font-weight: 700;
  width: 500rpx
}

.tit-sorrow .info-right {
  font-size: 26rpx;
  letter-spacing: 2rpx;
  position: relative
}

.tit-sorrow .info-right .letter-btn {
  border: 3rpx solid #ffa82e;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
  color: #ffa82e;
  display: flex;
  align-items: center
}

.tit-sorrow .info-right .letter-btn image {
  display: inline-block;
  width: 28rpx;
  height: 28rpx
}

.btn-part keo-check-button,
.tit-sorrow .info-right .letter-btn image text {
  display: inline-block
}

.tit-sorrow .info-right .notifi-box {
  width: 380rpx;
  height: 140rpx;
  background: var(--notifi-box-bg-color);
  border-radius: 10px;
  margin-left: 20px;
  position: absolute;
  top: 100rpx;
  right: 0;
  animation: upDown 1.2s ease-in-out 5;
  z-index: -1
}

.tit-sorrow .info-right .notifi-box:before {
  content: "";
  position: absolute;
  bottom: 100%;
  right: 45rpx;
  border-left: 13px solid transparent;
  border-right: 13px solid transparent;
  border-bottom: 13px solid var(--notifi-box-bg-color)
}

.tit-sorrow .info-right .notifi-box .desc {
  font-size: 33rpx;
  color: #7f7f7f;
  position: absolute;
  top: 40rpx;
  left: 50rpx
}

.tit-sorrow .info-right .notifi-box .pic image {
  margin-top: 40rpx;
  width: 100%;
  height: 100rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx
}

.tit-sorrow-box {
  margin: 20rpx 40rpx 10rpx
}

.tit-sorrow-box .sorrow-list {
  height: 470rpx
}

.tit-sorrow-box .sorrow-list yeo-stamp-text {
  display: inline-block;
  margin-right: 20rpx
}

.tit-sorrow-box .sorrow-list .list-box {
  display: flex
}

.letter-station,
.tip-box {
  margin: var(--index-tit-margin)
}

.letter-station .info-left {
  font-size: 40rpx;
  font-weight: 700;
  width: 500rpx
}

.tip-box {
  height: 280rpx;
  color: #ffead9;
  font-size: 32rpx;
  position: relative
}

.tip-box .tip-pic {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  background: #fda051;
  border-radius: 50%;
  border: 4rpx solid #e8eaea;
  padding: 10rpx 12rpx 5rpx
}

.tip-box .tip-pic image {
  width: 40rpx;
  height: 40rpx
}

.tip-box .item-1 {
  letter-spacing: 3rpx;
  margin-top: 60rpx
}

.tip-box .item-2 {
  letter-spacing: 3rpx;
  margin: 10rpx 0
}

.tip-box .item-3 {
  font-size: 22rpx;
  letter-spacing: 3rpx;
  margin-bottom: 40rpx;
  color: #ffd4b1
}

.show-tip-pop {
  width: 560rpx;
  margin: 50rpx 30rpx 20rpx
}

.show-tip-pop .tips-title {
  margin-bottom: 30rpx;
  display: flex;
  align-items: center
}

.show-tip-pop .tips-title image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 12rpx;
  display: inline-block
}

.show-tip-pop .tips-title text {
  font-size: 36rpx;
  color: #444;
  font-weight: 700;
  display: inline-block;
  margin-top: 5rpx
}

.show-tip-pop .swiperClass {
  margin: 20rpx 0 0
}

.show-tip-pop .swiperClass swiper-item {
  display: flex;
  align-items: center;
  flex-direction: column
}

.show-tip-pop .swiperClass swiper-item image {
  margin: 50rpx 0 0;
  width: 400rpx;
  height: 350rpx
}

.show-tip-pop .swiperClass .slide-content {
  font-size: 30rpx;
  color: #8b8b8b;
  letter-spacing: 3rpx;
  text-align: center;
  margin: 50rpx 0 0
}

.btn-part {
  margin: 30rpx auto 0;
  width: 500rpx
}

.item-bg-hua image,
.item-bg-yezi image {
  width: 240rpx;
  height: 220rpx;
  position: absolute;
  top: 730rpx;
  left: -60rpx;
  z-index: -1
}

.item-bg-hua image {
  width: 60rpx;
  height: 60rpx;
  top: 1100rpx;
  left: 70%;
  opacity: .5
}

.old-letter,
.old-letter-main {
  margin: var(--index-tit-margin)
}

.old-letter .info-left {
  font-size: 40rpx;
  font-weight: 700;
  width: 500rpx
}

.old-letter-main .top-part {
  padding: 30rpx 20rpx;
  border-top-right-radius: 12rpx;
  border-top-left-radius: 12rpx;
  background-repeat: no-repeat;
  background-position: 50% 22%
}

.old-letter-main .top-part .left-post {
  display: flex;
  align-items: center
}

.old-letter-main .top-part .left-post image {
  width: 70rpx;
  height: 70rpx
}

.old-letter-main .top-part .left-post .words {
  color: #eee;
  margin-left: 20rpx
}

.old-letter-main .top-part .left-post .words .top-tit {
  font-size: 33rpx
}

.old-letter-main .top-part .left-post .words .bot-cont {
  font-size: 25rpx;
  font-weight: lighter;
  margin-top: 7rpx;
  letter-spacing: 1rpx
}

.old-letter-main .top-part .right-plane image {
  width: 70rpx;
  height: 70rpx;
  transform: rotate(42deg)
}

.old-letter-main .show-letter-part {
  margin: 10rpx 20rpx
}

.old-letter-main .show-letter-part .item-letter {
  border-bottom: 2rpx #444 dashed;
  padding: 20rpx 0;
  position: relative
}

.old-letter-main .show-letter-part .item-letter .letter {
  line-height: 1.4;
  font-size: 29rpx
}

.old-letter-main .show-letter-part .item-letter .all-page {
  position: absolute;
  bottom: 20rpx;
  right: 12rpx;
  color: #7878d4;
  font-size: 30rpx
}

.old-letter-main .check-more {
  text-align: right;
  color: #7878d4;
  font-size: 28rpx;
  margin: 30rpx 30rpx 20rpx 0
}